@model List<Inventory_Web.Controllers.CostCenterItemDto>
@{
    ViewData["Title"] = "مدیریت مراکز هزینه";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title">لیست مراکز هزینه</h3>
            <div>
                @if (User.IsInRole("Admin") || User.IsInRole("SeniorUser") || User.IsInRole("SeniorStorekeeper"))
                {
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fas fa-plus"></i> ایجاد مرکز هزینه جدید
                    </a>
                }
                <span class="badge bg-primary ms-2">@Model.Count مرکز هزینه</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i>
                @TempData["Error"]
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["Success"]
            </div>
        }

        @if (Model.Count == 0)
        {
            <div class="alert alert-warning text-center">
                <i class="fas fa-money-bill-wave fa-2x mb-3"></i>
                <h5>هیچ مرکز هزینه‌ای یافت نشد</h5>
                <p class="mb-0">مرکز هزینه‌ای در سیستم ثبت نشده است.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>نام مرکز هزینه</th>
                            <th>توضیحات</th>
                            <th>تاریخ ایجاد</th>
                            <th>وضعیت</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var costCenter in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@costCenter.Name</strong>
                                </td>
                                <td>@costCenter.Description</td>
                                <td>@costCenter.CreatedDate.ToString("yyyy/MM/dd")</td>
                                <td>
                                    @if (costCenter.IsActive)
                                    {
                                        <span class="badge bg-success">فعال</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">غیرفعال</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        @if (User.IsInRole("Admin") || User.IsInRole("SeniorUser") || User.IsInRole("SeniorStorekeeper"))
                                        {
                                            <a href="@Url.Action("Edit", new { id = costCenter.Id })"
                                               class="btn btn-warning" title="ویرایش">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }

                                        @if (User.IsInRole("Admin") || User.IsInRole("SeniorUser") || User.IsInRole("SeniorStorekeeper"))
                                        {
                                            @if (costCenter.IsActive)
                                            {
                                                <form asp-action="Delete" method="post" style="display: inline;"
                                                      onsubmit="return confirm('آیا از غیرفعال کردن این مرکز هزینه اطمینان دارید؟\n\nتوجه: پس از غیرفعال شدن، این مرکز هزینه در لیست عملیات خروج کالا نمایش داده نمی‌شود.');">
                                                    <input type="hidden" name="id" value="@costCenter.Id" />
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger" title="غیرفعال کردن">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <button class="btn btn-secondary" disabled title="قبلاً غیرفعال شده">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            }
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <!-- به بخش Scripts در Index.cshtml اضافه شود -->
    <script>
        $(document).ready(function () {
            // بررسی استفاده قبل از حذف
            $('form[asp-action="Delete"]').submit(function (e) {
                e.preventDefault();
                var form = $(this);
                var costCenterId = form.find('input[name="id"]').val();
                var costCenterName = form.closest('tr').find('td:first strong').text();

                // بررسی استفاده از مرکز هزینه
                $.get(`/CostCenters/CheckUsage?id=${costCenterId}`, function (data) {
                    if (data.isUsed) {
                        if (confirm(`⚠️ این مرکز هزینه در عملیات انبار استفاده شده است.\n\nآیا از غیرفعال کردن مرکز هزینه "${costCenterName}" اطمینان دارید؟\n\nتوجه: پس از غیرفعال شدن، این مرکز هزینه در لیست عملیات جدید نمایش داده نمی‌شود اما عملیات قبلی تغییری نمی‌کند.`)) {
                            form.off('submit').submit();
                        }
                    } else {
                        if (confirm(`آیا از غیرفعال کردن مرکز هزینه "${costCenterName}" اطمینان دارید؟`)) {
                            form.off('submit').submit();
                        }
                    }
                }).fail(function () {
                    // در صورت خطا در بررسی، با تأیید استاندارد ادامه دهیم
                    if (confirm(`آیا از غیرفعال کردن مرکز هزینه "${costCenterName}" اطمینان دارید؟`)) {
                        form.off('submit').submit();
                    }
                });
            });
        });
    </script>
}