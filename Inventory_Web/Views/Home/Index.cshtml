@model Inventory_Web.Controllers.DashboardViewModel
@{
    ViewData["Title"] = "داشبورد مدیریت انبار";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- استایل‌های سفارشی -->
<style>
    .dashboard-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        overflow: hidden;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0,0,0,0.12);
        }

    .stat-card {
        color: white;
        border-radius: 12px;
        padding: 25px;
        margin-bottom: 20px;
    }

        .stat-card.primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .stat-card.success {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }

        .stat-card.warning {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        }

        .stat-card.danger {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
        }

    .stat-icon {
        font-size: 2.5rem;
        opacity: 0.8;
        margin-bottom: 15px;
    }

    .stat-number {
        font-size: 2rem;
        font-weight: bold;
        margin: 10px 0;
    }

    .stat-text {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .quick-action-card {
        background: white;
        border: 1px solid #e3e6f0;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        transition: all 0.3s ease;
        height: 100%;
    }

        .quick-action-card:hover {
            background: #f8f9fc;
            border-color: #4e73df;
        }

    .action-icon {
        font-size: 2rem;
        color: #4e73df;
        margin-bottom: 15px;
    }

    .welcome-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 15px;
        padding: 30px;
        margin-bottom: 30px;
    }

    .user-avatar {
        width: 80px;
        height: 80px;
        background: rgba(255,255,255,0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-left: 20px;
    }

    .recent-activity {
        border-left: 3px solid #4e73df;
        padding-left: 15px;
    }

    .activity-item {
        padding: 15px 0;
        border-bottom: 1px solid #f0f0f0;
    }

        .activity-item:last-child {
            border-bottom: none;
        }

    .badge-role {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
    }

    .operation-type-receive {
        color: #28a745;
    }

    .operation-type-issue {
        color: #ffc107;
    }

    .empty-state {
        text-align: center;
        padding: 40px 20px;
        color: #6c757d;
    }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 15px;
            opacity: 0.5;
        }
</style>

<div class="container-fluid">
    <!-- بخش خوش‌آمدگویی -->
    <div class="row">
        <div class="col-12">
            <div class="welcome-section">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        @*<h1 class="display-4 mb-3">👋 سلام، <strong>@Model.UserName</strong>!</h1>*@
                        <p class="lead mb-2">به سیستم مدیریت انبار خوش آمدید</p>
                        <div class="d-flex align-items-center flex-wrap">
                            <span class="badge-role me-3">
                                <i class="fas fa-user-tag me-2"></i>@Model.UserRole
                            </span>
                            <span class="text-white-50">
                                <i class="fas fa-clock me-2"></i>
                                <span id="current-time">@Model.CurrentTime</span>
                            </span>
                        </div>
                    </div>
                    <div class="col-md-4 text-end">
                        <div class="user-avatar float-end">
                            <i class="fas fa-user-cog"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- آمار و ارقام واقعی -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="stat-card primary">
                <div class="stat-icon">
                    <i class="fas fa-boxes"></i>
                </div>
                <div class="stat-number">@Model.TotalProducts.ToString("N0")</div>
                <div class="stat-text">تعداد کل کالاها</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card success">
                <div class="stat-icon">
                    <i class="fas fa-warehouse"></i>
                </div>
                <div class="stat-number">@Model.ActiveWarehouses.ToString("N0")</div>
                <div class="stat-text">انبار فعال</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card warning">
                <div class="stat-icon">
                    <i class="fas fa-exchange-alt"></i>
                </div>
                <div class="stat-number">@Model.TodayOperations.ToString("N0")</div>
                <div class="stat-text">عملیات امروز</div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="stat-card danger">
                <div class="stat-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="stat-number">@Model.LowStockItems.ToString("N0")</div>
                <div class="stat-text">کالاهای اخطار</div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- دسترسی‌های سریع -->
        <div class="col-lg-8">
            <div class="card dashboard-card mb-4">
                <div class="card-header bg-transparent border-bottom-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt text-warning me-2"></i>
                        دسترسی‌های سریع
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 col-6 mb-3">
                            <a href="/StockOperations/Receive" class="text-decoration-none">
                                <div class="quick-action-card">
                                    <div class="action-icon text-success">
                                        <i class="fas fa-sign-in-alt"></i>
                                    </div>
                                    <h6>ورود کالا</h6>
                                    <small class="text-muted">ثبت ورود جدید</small>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 col-6 mb-3">
                            <a href="/StockOperations/Issue" class="text-decoration-none">
                                <div class="quick-action-card">
                                    <div class="action-icon text-warning">
                                        <i class="fas fa-sign-out-alt"></i>
                                    </div>
                                    <h6>خروج کالا</h6>
                                    <small class="text-muted">ثبت خروج جدید</small>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 col-6 mb-3">
                            <a href="/StockOperations" class="text-decoration-none">
                                <div class="quick-action-card">
                                    <div class="action-icon text-info">
                                        <i class="fas fa-history"></i>
                                    </div>
                                    <h6>تاریخچه</h6>
                                    <small class="text-muted">مشاهده عملیات</small>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 col-6 mb-3">
                            <a href="/Products" class="text-decoration-none">
                                <div class="quick-action-card">
                                    <div class="action-icon text-primary">
                                        <i class="fas fa-boxes"></i>
                                    </div>
                                    <h6>مدیریت کالا</h6>
                                    <small class="text-muted">کالاها و برندها</small>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- فعالیت‌های اخیر واقعی -->
            <div class="card dashboard-card">
                <div class="card-header bg-transparent border-bottom-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list-alt text-info me-2"></i>
                        فعالیت‌های اخیر
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivities != null && Model.RecentActivities.Any())
                    {
                        <div class="recent-activity">
                            @foreach (var activity in Model.RecentActivities)
                            {
                                <div class="activity-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            @if (activity.OperationType == "Receive")
                                            {
                                                <i class="fas fa-sign-in-alt operation-type-receive me-2"></i>
                                                <strong>ورود کالا</strong>
                                            }
                                            else if (activity.OperationType == "Issue")
                                            {
                                                <i class="fas fa-sign-out-alt operation-type-issue me-2"></i>
                                                <strong>خروج کالا</strong>
                                            }
                                            else
                                            {
                                                <i class="fas fa-exchange-alt text-info me-2"></i>
                                                <strong>@activity.OperationType</strong>
                                            }
                                            - @activity.ProductName
                                        </div>
                                        <div class="text-muted small">
                                            @activity.OperationDate.ToString("HH:mm")
                                        </div>
                                    </div>
                                    <div class="text-muted small ms-4">
                                        @activity.WarehouseName - تعداد: @activity.Quantity.ToString("N0")
                                        @if (!string.IsNullOrEmpty(activity.CostCenterName))
                                        {
                                            <span> - مرکز هزینه: @activity.CostCenterName</span>
                                        }
                                    </div>
                                    @if (!string.IsNullOrEmpty(activity.Reason))
                                    {
                                        <div class="text-muted small ms-4">
                                            دلیل: @activity.Reason
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-inbox"></i>
                            <h5>هیچ فعالیتی یافت نشد</h5>
                            <p class="text-muted">هنوز هیچ عملیات انباری ثبت نشده است</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- سایدبار اطلاعات -->
        <div class="col-lg-4">
            <!-- وضعیت سیستم -->
            <div class="card dashboard-card mb-4">
                <div class="card-header bg-transparent border-bottom-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar text-success me-2"></i>
                        وضعیت سیستم
                    </h5>
                </div>
                <div class="card-body">
                    @{
                        var warehouseUsage = Model.ActiveWarehouses > 0 ? 65 : 0;
                        var successRate = Model.TodayOperations > 0 ? 92 : 0;
                        var systemPerformance = 85;
                    }

                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>استفاده از انبار</span>
                            <span>@warehouseUsage٪</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" style="width: @warehouseUsage%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>عملیات موفق</span>
                            <span>@successRate٪</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-info" style="width: @successRate%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>کارایی سیستم</span>
                            <span>@systemPerformance٪</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-warning" style="width: @systemPerformance%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- اعلان‌های هوشمند -->
            <div class="card dashboard-card">
                <div class="card-header bg-transparent border-bottom-0">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bell text-danger me-2"></i>
                        اعلان‌ها
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.LowStockItems > 0)
                    {
                        <div class="alert alert-warning alert-dismissible fade show mb-3" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>تعداد @Model.LowStockItems کالا</strong> در آستانه اتمام موجودی هستند
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.TodayOperations == 0)
                    {
                        <div class="alert alert-info alert-dismissible fade show mb-3" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            امروز هیچ عملیاتی ثبت نشده است
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            امروز <strong>@Model.TodayOperations عملیات</strong> با موفقیت ثبت شد
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-primary alert-dismissible fade show" role="alert">
                        <i class="fas fa-database me-2"></i>
                        سیستم در <strong>وضعیت مطلوب</strong> فعالیت می‌کند
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- اسکریپت برای انیمیشن‌ها و به‌روزرسانی زمان -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // انیمیشن برای کارت‌های آمار
        const statCards = document.querySelectorAll('.stat-card');
        statCards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';

            setTimeout(() => {
                card.style.transition = 'all 0.5s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, index * 100);
        });

        // به‌روزرسانی زمان به صورت زنده
        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('fa-IR');
            const dateString = now.toLocaleDateString('fa-IR');
            document.getElementById('current-time').textContent = dateString + ' - ' + timeString;
        }

        setInterval(updateTime, 60000);
        updateTime();
    });
</script>