@model List<Inventory_Web.Controllers.StockOperationDto>
@{
    ViewData["Title"] = "تاریخچه عملیات انبار";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title">تاریخچه عملیات انبار</h3>
            <div>
                <a href="@Url.Action("Receive")" class="btn btn-success me-2">
                    <i class="fas fa-sign-in-alt"></i> ورود کالا
                </a>
                <a href="@Url.Action("Issue")" class="btn btn-warning">
                    <i class="fas fa-sign-out-alt"></i> خروج کالا
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i>
                @TempData["Error"]
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["Success"]
            </div>
        }

        @if (Model.Count == 0)
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-history fa-2x mb-3"></i>
                <h5>هیچ عملیاتی ثبت نشده است</h5>
                <p class="mb-0">هنوز عملیات ورود یا خروج کالا ثبت نشده است.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>عملیات</th>
                            <th>محصول</th>
                            <th>انبار</th>
                            <th>برند</th>
                            <th>تعداد</th>
                            <th>مرکز هزینه</th>
                            <th>تاریخ</th>
                            <th>ثبت کننده</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var operation in Model)
                        {
                            <tr>
                                <td>
                                    @if (operation.OperationType == "RECEIVE")
                                    {
                                        <span class="badge bg-success">ورود</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">خروج</span>
                                    }
                                </td>
                                <td>@operation.ProductName</td>
                                <td>@operation.WarehouseName</td>
                                <td>@operation.BrandName</td>
                                <td>
                                    <span class="badge @(operation.OperationType == "RECEIVE" ? "bg-success" : "bg-danger")">
                                        @operation.Quantity
                                    </span>
                                </td>
                                <td>@(operation.CostCenterName ?? "-")</td>
                                <td>@operation.OperationDate.ToString("yyyy/MM/dd HH:mm")</td>
                                <td>@operation.CreatedByName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>