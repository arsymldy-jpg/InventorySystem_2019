@model List<Inventory_Web.Controllers.StockOperationDto>
@{
    ViewData["Title"] = "تاریخچه عملیات انبار";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title">تاریخچه عملیات انبار</h3>
            <div>
                <a href="@Url.Action("Receive")" class="btn btn-success me-2">
                    <i class="fas fa-sign-in-alt"></i> ورود کالا
                </a>
                <a href="@Url.Action("Issue")" class="btn btn-warning">
                    <i class="fas fa-sign-out-alt"></i> خروج کالا
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i>
                @TempData["Error"]
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["Success"]
            </div>
        }

        <!-- فرم جستجو -->
        <div class="row mb-4">
            <div class="col-md-6">
                <form method="get" action="@Url.Action("Index")" class="d-flex">
                    <div class="input-group">
                        <input type="text" name="searchString" class="form-control"
                               placeholder="جستجو بر اساس نام کالا یا کد کالا..."
                               value="@Context.Request.Query["searchString"]">
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="fas fa-search"></i> جستجو
                        </button>
                        @if (!string.IsNullOrEmpty(Context.Request.Query["searchString"]))
                        {
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> پاک کردن
                            </a>
                        }
                    </div>
                </form>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Context.Request.Query["searchString"]) && Model.Count > 0)
        {
            <div class="alert alert-info mb-3">
                <i class="fas fa-info-circle"></i>
                <strong>نتایج جستجو برای "@Context.Request.Query["searchString"]"</strong>
                <span class="badge bg-info me-2">@Model.Count نتیجه یافت شد</span>
            </div>
        }

        @if (Model.Count == 0)
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-history fa-2x mb-3"></i>
                @if (!string.IsNullOrEmpty(Context.Request.Query["searchString"]))
                {
                    <h5>هیچ عملیاتی با مشخصات جستجو شده یافت نشد</h5>
                    <p class="mb-0">هیچ عملیاتی با عبارت "@Context.Request.Query["searchString"]" یافت نشد.</p>
                    <a href="@Url.Action("Index")" class="btn btn-primary mt-2">مشاهده همه عملیات‌ها</a>
                }
                else
                {
                    <h5>هیچ عملیاتی ثبت نشده است</h5>
                    <p class="mb-0">هنوز عملیات ورود یا خروج کالا ثبت نشده است.</p>
                }
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>عملیات</th>
                            <th>کد اصلی</th>
                            <th>کالا</th>
                            <th>انبار</th>
                            <th>برند</th>
                            <th>تعداد</th>
                            <th>مرکز هزینه</th>
                            <th>تاریخ</th>
                            <th>ثبت کننده</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var operation in Model)
                        {
                            <tr>
                                <td>
                                    @if (operation.OperationType == "RECEIVE")
                                    {
                                        <span class="badge bg-success">ورود</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">خروج</span>
                                    }
                                </td>
                                <td>@operation.ProductMainCode</td>
                                <td>@operation.ProductName</td>
                                <td>@operation.WarehouseName</td>
                                <td>@operation.BrandName</td>
                                <td>
                                    <span class="badge @(operation.OperationType == "RECEIVE" ? "bg-success" : "bg-danger")">
                                        @operation.Quantity
                                    </span>
                                </td>
                                <td>@(operation.CostCenterName ?? "-")</td>
                                <td>@operation.OperationDate.ToString("yyyy/MM/dd HH:mm")</td>
                                <td>@operation.CreatedByName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>