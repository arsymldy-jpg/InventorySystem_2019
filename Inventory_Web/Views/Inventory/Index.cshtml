@model List<Inventory_Web.Controllers.InventoryItemDto>
@{
    ViewData["Title"] = "مدیریت موجودی انبارها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title">موجودی انبارها</h3>
            <div>
                <span class="badge bg-primary ms-2">@Model.Count آیتم</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i>
                @TempData["Error"]
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["Success"]
            </div>
        }

        @if (Model.Count == 0)
        {
            <div class="alert alert-warning text-center">
                <i class="fas fa-boxes fa-2x mb-3"></i>
                <h5>هیچ موجودی یافت نشد</h5>
                <p class="mb-0">هنوز موجودی در سیستم ثبت نشده است.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>محصول</th>
                            <th>انبار</th>
                            <th>برند</th>
                            <th>موجودی</th>
                            <th>آخرین بروزرسانی</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.ProductName</strong>
                                </td>
                                <td>@item.WarehouseName</td>
                                <td>@item.BrandName</td>
                                <td>
                                    <span class="badge @(item.Quantity > 0 ? "bg-success" : "bg-warning")">
                                        @item.Quantity
                                    </span>
                                </td>
                                <td>@item.LastUpdated.ToString("yyyy/MM/dd HH:mm")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        @if (User.IsInRole("Admin") || User.IsInRole("SeniorUser") || User.IsInRole("SeniorStorekeeper") || User.IsInRole("Storekeeper"))
                                        {
                                            <a href="@Url.Action("Adjust", new { productId = item.ProductId, warehouseId = item.WarehouseId, brandId = item.BrandId })"
                                               class="btn btn-warning" title="تنظیم موجودی">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>