@model List<Inventory_Web.Controllers.WarehouseDto>
@{
    ViewData["Title"] = "مدیریت انبارها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title">لیست انبارها</h3>
            <div>
                @if (User.IsInRole("Admin") || User.IsInRole("SeniorUser"))
                {
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fas fa-plus"></i> ایجاد انبار جدید
                    </a>
                }
                <span class="badge bg-primary ms-2">@Model.Count انبار</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i>
                @TempData["Error"]
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["Success"]
            </div>
        }

        @if (Model.Count == 0)
        {
            <div class="alert alert-warning text-center">
                <i class="fas fa-warehouse fa-2x mb-3"></i>
                <h5>هیچ انباری یافت نشد</h5>
                <p class="mb-0">انباری در سیستم ثبت نشده است.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>نام انبار</th>
                            <th>آدرس</th>
                            <th>تلفن</th>
                            <th>وضعیت</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var warehouse in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@warehouse.Name</strong>
                                </td>
                                <td>@warehouse.Address</td>
                                <td>@warehouse.Phone</td>
                                <td>
                                    @if (warehouse.IsActive)
                                    {
                                        <span class="badge bg-success">فعال</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">غیرفعال</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Details", new { id = warehouse.Id })"
                                           class="btn btn-info" title="مشاهده جزئیات">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @if (User.IsInRole("Admin") || User.IsInRole("SeniorUser"))
                                        {
                                            <a href="@Url.Action("Edit", new { id = warehouse.Id })"
                                               class="btn btn-warning" title="ویرایش">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }

                                        <a href="@Url.Action("Warehouse", "Inventory", new { id = warehouse.Id })"
                                           class="btn btn-info btn-sm" title="مشاهده موجودی">
                                            <i class="fas fa-boxes"></i>
                                        </a>

                                        @if (User.IsInRole("Admin"))
                                        {
                                            <form asp-action="Delete" method="post" style="display: inline;"
                                                  onsubmit="return confirm('آیا از حذف این انبار اطمینان دارید؟');">
                                                <input type="hidden" name="id" value="@warehouse.Id" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger" title="حذف">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>