@model Inventory_Web.Models.ApiModels.LoginRequest

@{
    ViewData["Title"] = "ورود به سیستم";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-page">
    <div class="login-box">
        <div class="card">
            <div class="card-header text-center">
                <h3><i class="fas fa-warehouse me-2"></i>سیستم انبارداری</h3>
                <p class="mb-0">لطفا وارد شوید</p>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="PersonnelCode" class="form-label">کد پرسنلی</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input asp-for="PersonnelCode" class="form-control" placeholder="کد پرسنلی خود را وارد کنید" />
                        </div>
                        <span asp-validation-for="PersonnelCode" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">رمز عبور</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور خود را وارد کنید" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>ورود به سیستم
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <small>نسخه ۱.۰ - سیستم مدیریت انبار</small>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Reset and base styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-page {
            width: 100%;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-box {
            width: 100%;
            max-width: 400px;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }

        .card-header {
            background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
            color: white;
            padding: 2rem 1rem;
            border-bottom: none;
        }

            .card-header h3 {
                margin-bottom: 0.5rem;
                font-weight: 600;
            }

        .card-body {
            padding: 2rem;
        }

        .card-footer {
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
            padding: 1rem;
        }

        .form-label {
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #495057;
        }

        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 12px 15px;
            font-size: 14px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #3498db;
                box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
            }

        .input-group-text {
            background-color: #f8f9fa;
            border: 2px solid #e9ecef;
            border-left: none;
            color: #6c757d;
        }

        .input-group .form-control {
            border-right: none;
        }

        .input-group:focus-within .input-group-text {
            border-color: #3498db;
            color: #3498db;
        }

        .btn-primary {
            background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
            border: none;
            border-radius: 8px;
            padding: 12px;
            font-weight: 600;
            font-size: 16px;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(52, 152, 219, 0.4);
            }

        .alert-danger {
            border-radius: 8px;
            border: none;
            background-color: #f8d7da;
            color: #721c24;
        }

        .text-danger {
            font-size: 12px;
        }

        /* Responsive design */
        @@media (max-width: 576px) {
            .login-page {
                padding: 10px;
            }

            .card-body {
                padding: 1.5rem;
            }

            .card-header {
                padding: 1.5rem 1rem;
            }
        }

        /* RTL specific adjustments */
        .input-group-text {
            border-left: 2px solid #e9ecef;
            border-right: none;
        }

        .input-group .form-control {
            border-left: none;
            border-right: 2px solid #e9ecef;
        }

        .input-group:focus-within .form-control {
            border-right-color: #3498db;
        }

        .input-group:focus-within .input-group-text {
            border-left-color: #3498db;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // فوکوس روی فیلد کد پرسنلی
            $('#PersonnelCode').focus();

            // نمایش پیام خطا به صورت زیبا
            if ($('.alert-danger').text().trim() !== '') {
                $('.alert-danger').show();
            } else {
                $('.alert-danger').hide();
            }
        });
    </script>
}