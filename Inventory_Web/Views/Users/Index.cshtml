@model List<Inventory_Web.Controllers.UserDisplayDto>
@{
    ViewData["Title"] = "مدیریت کاربران";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title">لیست کاربران</h3>
            <div>
                @if (User.IsInRole("Admin") || User.IsInRole("SeniorUser") || User.IsInRole("SeniorStorekeeper"))
                {
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fas fa-user-plus"></i> ایجاد کاربر جدید
                    </a>
                }
                <span class="badge bg-primary ms-2">@Model.Count کاربر</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i>
                @TempData["Error"]
            </div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["Success"]
            </div>
        }

        @if (Model.Count == 0)
        {
            <div class="alert alert-warning text-center">
                <i class="fas fa-users fa-2x mb-3"></i>
                <h5>هیچ کاربری یافت نشد</h5>
                <p class="mb-0">کاربری در سیستم ثبت نشده است.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>کد پرسنلی</th>
                            <th>نام و نام خانوادگی</th>
                            <th>موبایل</th>
                            <th>نقش</th>
                            <th>وضعیت</th>
                            <th>تاریخ انقضا</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@user.PersonnelCode</strong>
                                </td>
                                <td>@user.FirstName @user.LastName</td>
                                <td>@user.Mobile</td>
                                <td>
                                    <span class="badge bg-info">@user.RoleName</span>
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">فعال</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">غیرفعال</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.ExpiryDate))
                                    {
                                        <small>@user.ExpiryDate</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">---</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Details", new { id = user.Id })"
                                           class="btn btn-info" title="مشاهده جزئیات">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        <a href="@Url.Action("Edit", new { id = user.Id })"
                                           class="btn btn-warning" title="ویرایش">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <form asp-action="Deactivate" method="post" style="display: inline;"
                                              onsubmit="return confirm('آیا از غیرفعال کردن این کاربر اطمینان دارید؟');">
                                            <input type="hidden" name="id" value="@user.Id" />
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-secondary" title="غیرفعال کردن">
                                                <i class="fas fa-user-slash"></i>
                                            </button>
                                        </form>

                                        @if (User.IsInRole("Admin"))
                                        {
                                            <form asp-action="Delete" method="post" style="display: inline;"
                                                  onsubmit="return confirm('آیا از حذف این کاربر اطمینان دارید؟');">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger" title="حذف">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>