@model List<Inventory_Web.Controllers.ProductDto>
@{
    ViewData["Title"] = "مدیریت کالاها";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title">لیست کالاها</h3>
            <div>
                @if (User.IsInRole("Admin") || User.IsInRole("SeniorUser") || User.IsInRole("SeniorStorekeeper"))
                {
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fas fa-plus"></i> ایجاد کالا جدید
                    </a>
                }
                <span class="badge bg-primary ms-2">@Model.Count کالا</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i>
                @TempData["Error"]
            </div>
        }

        <!-- فرم جستجو -->
        <div class="row mb-4">
            <div class="col-md-6">
                <form method="get" action="@Url.Action("Index")" class="d-flex">
                    <div class="input-group">
                        <input type="text" name="searchString" class="form-control"
                               placeholder="جستجو بر اساس نام کالا یا کد کالا..."
                               value="@Context.Request.Query["searchString"]">
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="fas fa-search"></i> جستجو
                        </button>
                        @if (!string.IsNullOrEmpty(Context.Request.Query["searchString"]))
                        {
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> پاک کردن
                            </a>
                        }
                    </div>
                </form>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Context.Request.Query["searchString"]) && Model.Count > 0)
        {
            <div class="alert alert-info mb-3">
                <i class="fas fa-info-circle"></i>
                <strong>نتایج جستجو برای "@Context.Request.Query["searchString"]"</strong>
                <span class="badge bg-info me-2">@Model.Count نتیجه یافت شد</span>
            </div>
        }

        @if (Model.Count == 0)
        {
            <div class="alert alert-warning text-center">
                <i class="fas fa-box-open fa-2x mb-3"></i>
                @if (!string.IsNullOrEmpty(Context.Request.Query["searchString"]))
                {
                    <h5>هیچ کالایی با مشخصات جستجو شده یافت نشد</h5>
                    <p class="mb-0">هیچ کالایی با عبارت "@Context.Request.Query["searchString"]" یافت نشد.</p>
                    <a href="@Url.Action("Index")" class="btn btn-primary mt-2">مشاهده همه کالاها</a>
                }
                else
                {
                    <h5>هیچ کالایی یافت نشد</h5>
                    <p class="mb-0">کالایی در سیستم ثبت نشده است.</p>
                }
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>کد اصلی</th>
                            <th>نام کالا</th>
                            @*<th>نام دوم</th>*@
                            @*<th>موجودی کل</th>*@
                            <th>نقطه سفارش</th>
                            <th>موجودی اطمینان</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@product.MainCode</strong>
                                </td>
                                <td>@product.Name</td>
                                @*<td>@product.Name2</td>*@
                                @*<td>
                                        <span class="badge @(product.TotalQuantity > product.ReorderPoint ? "bg-success" : "bg-warning")">
                                            @product.TotalQuantity
                                        </span>
                                    </td>*@
                                <td>@product.ReorderPoint</td>
                                <td>@product.SafetyStock</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Details", new { id = product.Id })"
                                           class="btn btn-info" title="مشاهده جزئیات">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @if (User.IsInRole("Admin") || User.IsInRole("SeniorUser") || User.IsInRole("SeniorStorekeeper"))
                                        {
                                            <a href="@Url.Action("Edit", new { id = product.Id })"
                                               class="btn btn-warning" title="ویرایش">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }

                                        @if (User.IsInRole("Admin") || User.IsInRole("SeniorUser") || User.IsInRole("SeniorStorekeeper"))
                                        {
                                            <a href="@Url.Action("Manage", "ProductBrands", new { productId = product.Id })"
                                               class="btn btn-info btn-sm" title="مدیریت برندها">
                                                <i class="fas fa-tags"></i>
                                            </a>
                                        }

                                        @if (User.IsInRole("Admin") || User.IsInRole("SeniorUser"))
                                        {
                                            <form asp-action="Delete" method="post" style="display: inline;"
                                                  onsubmit="return confirm('آیا از حذف این کالا اطمینان دارید؟');">
                                                <input type="hidden" name="id" value="@product.Id" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger" title="حذف">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>