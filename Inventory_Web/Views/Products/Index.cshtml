@model List<Inventory_Web.Controllers.ProductDto>
@{
    ViewData["Title"] = "مدیریت محصولات";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h3 class="card-title">لیست محصولات</h3>
            <div>
                @if (User.IsInRole("Admin") || User.IsInRole("SeniorUser") || User.IsInRole("SeniorStorekeeper"))
                {
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fas fa-plus"></i> ایجاد محصول جدید
                    </a>
                }
                <span class="badge bg-primary ms-2">@Model.Count محصول</span>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i>
                @TempData["Error"]
            </div>
        }

        @if (Model.Count == 0)
        {
            <div class="alert alert-warning text-center">
                <i class="fas fa-box-open fa-2x mb-3"></i>
                <h5>هیچ محصولی یافت نشد</h5>
                <p class="mb-0">محصولی در سیستم ثبت نشده است.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>کد اصلی</th>
                            <th>نام محصول</th>
                            <th>نام دوم</th>
                            <th>موجودی کل</th>
                            <th>نقطه سفارش</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@product.MainCode</strong>
                                </td>
                                <td>@product.Name</td>
                                <td>@product.Name2</td>
                                <td>
                                    <span class="badge @(product.TotalQuantity > product.ReorderPoint ? "bg-success" : "bg-warning")">
                                        @product.TotalQuantity
                                    </span>
                                </td>
                                <td>@product.ReorderPoint</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Details", new { id = product.Id })"
                                           class="btn btn-info" title="مشاهده جزئیات">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @if (User.IsInRole("Admin") || User.IsInRole("SeniorUser") || User.IsInRole("SeniorStorekeeper"))
                                        {
                                            <a href="@Url.Action("Edit", new { id = product.Id })"
                                               class="btn btn-warning" title="ویرایش">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }

                                        @if (User.IsInRole("Admin") || User.IsInRole("SeniorUser"))
                                        {
                                            <form asp-action="Delete" method="post" style="display: inline;"
                                                  onsubmit="return confirm('آیا از حذف این محصول اطمینان دارید؟');">
                                                <input type="hidden" name="id" value="@product.Id" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger" title="حذف">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>