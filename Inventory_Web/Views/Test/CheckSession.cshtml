@{
    ViewData["Title"] = "بررسی Session";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">وضعیت Session و احراز هویت</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Session ID:</dt>
            <dd class="col-sm-8">@ViewBag.SessionId</dd>

            <dt class="col-sm-4">توکن در Session:</dt>
            <dd class="col-sm-8">
                @if (ViewBag.HasToken)
                {
                    <span class="badge bg-success">وجود دارد</span>
                    <small class="text-muted">(@ViewBag.TokenPreview)</small>
                }
                else
                {
                    <span class="badge bg-danger">وجود ندارد</span>
                }
            </dd>

            <dt class="col-sm-4">تست API:</dt>
            <dd class="col-sm-8">
                <span class="@(ViewBag.ApiTest.Contains("SUCCESS") ? "text-success" : "text-danger")">
                    @ViewBag.ApiTest
                </span>
            </dd>
        </dl>

        <div class="mt-3">
            <a href="/Products" class="btn btn-primary">تست صفحه محصولات</a>
            <a href="/Auth/Login" class="btn btn-secondary">بازگشت به لاگین</a>
        </div>
    </div>
</div>